<h1>Petite</h1>
<h3>新規Tweet</h3>
<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body, :size => 140 %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  
  <%= f.submit "Tweetする",class:"btn btn-info" %>
<% end %>
<%= link_to "Tweet一覧に戻る", tweets_path %>