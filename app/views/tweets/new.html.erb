<div class="header-3">
  <div class="title2">
  <h3>新規投稿</h3>
  </div>
</div>

<div class="newtweet">
 
  <%= form_for @tweet do |f| %>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_field :body, :size => 140 %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    
    <button type="button" class="btn btn-light"><%= f.submit "投稿" %></button>
  <% end %>
  <%= link_to "投稿一覧", tweets_path %>
  
</div>