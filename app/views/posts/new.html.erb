<h1>Petite</h1>
<h3>新規投稿</h3>
<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content, :size => 140 %>
  </div>

  <div class="field">
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>
<%= link_to "投稿一覧に戻る", posts_path %>