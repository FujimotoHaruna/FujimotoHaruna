      <% @posts.each do |p| %>
        <div class="col-sm-4">
          <div class="post">
            <%= image_tag p.picture_url, size: "250√ó200" if p.picture? %>
            <br>
            <a href="/users/<%= p.user.id %>"><%= p.user.name %></a>
            <br>
            <%= p.content %>

